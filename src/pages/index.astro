---
import { getCollection } from 'astro:content';
import MealTinder from '../components/MealTinder.tsx';
import '../styles/global.css';

const meals = await getCollection('meals');
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/dinder.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Dinder - Meal Planning Made Fun</title>
		<meta name="description" content="Swipe through delicious meal options to plan your weekly menu" />
	</head>
	<body>
		<div class="container">
			<header class="header">
				<div class="logo-container">
					<img src="/dinder.svg" alt="Dinder Logo" class="logo" />
					<h1>Dinder</h1>
				</div>
				<p>Swipe right for meals you'd like to eat this week!</p>
			</header>

			<main>
				<MealTinder meals={meals} client:load />
			</main>

			<footer class="footer">
				<p>Want your own? Visit <a href="https://github.com/bgschiller/dinder-astro">the GitHub repo to remix</a></p>
			</footer>
		</div>
	</body>
</html>
